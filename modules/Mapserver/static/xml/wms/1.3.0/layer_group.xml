<Layer>
    <Title>{title}</Title>
    <Name>{name}</Name>
    <Abstract>{abstract}</Abstract>
    <CRS>urn:ogc:def:crs:EPSG::4326</CRS>
    <CRS>urn:ogc:def:crs:EPSG::{srid}</CRS>
    <BoundingBox CRS="urn:ogc:def:crs:EPSG::{srid}" minx="{bbox_south}" miny="{bbox_west}" maxx="{bbox_north}" maxy="{bbox_east}" />
    <BoundingBox CRS="urn:ogc:def:crs:EPSG::4326" minx="{bbox_west_wgs84}" miny="{bbox_south_wgs84}" maxx="{bbox_east_wgs84}" maxy="{bbox_north_wgs84}" />
    {layers}
</Layer>